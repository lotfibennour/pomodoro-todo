{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PrayerFlow Pomodoro",
  "version": "0.1.0",
  "identifier": "com.prayerflow.pomodoro",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build && node scripts/prepare-tauri-build.js",
    "frontendDist": "../out"
  },
  "app": {
    "windows": [
      {
        "title": "PrayerFlow Pomodoro",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources"
    ],
    "externalBin": [
      "binaries/node"
    ],
    "windows": {
      "wix": {
        "language": "en-US"
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true,
      "scope": [
        {
          "name": "binaries/node",
          "sidecar": true,
          "args": true
        }
      ]
    }
  }
}